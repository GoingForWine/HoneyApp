@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> houses.
        <br />
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and beekeepers</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Honey" asp-action="All"
       class="btn btn-primary btn-lg">All Honeys</a>
    <a asp-area="" asp-controller="Honey" asp-action="Add"
       class="btn btn-primary btn-lg">Add Honey</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Honey" asp-action="Mine"
       class="btn btn-primary btn-lg">My Honeys</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>

<div class="mb-5"></div>

<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics_btn">Show Statistics</button>
    </div>
</div>

<div class="mt-4 p-5 bg-light d-none" id="statistics_box">
    <div class="row">
        <h2 class="col-md-6 text-center" id="total_houses"></h2>
        <h2 class="col-md-6 text-center" id="total_rents"></h2>
    </div>
</div>

@section Scripts
{
    <script>statistics();</script>
}
