@page
@model HoneyWebPlatform.Web.Areas.Identity.Pages.Account.ExternalLoginModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Свържете вашия акаунт @Model.ProviderDisplayName.</h2>
<hr />

<p id="external-login-description" class="text-info">
    Вие успешно сте аутентикиран с <strong>@Model.ProviderDisplayName</strong>.
    Моля, въведете електронна поща за този сайт по-долу и щракнете върху бутона Регистрация, за да завършите
    входа.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Регистрация</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}