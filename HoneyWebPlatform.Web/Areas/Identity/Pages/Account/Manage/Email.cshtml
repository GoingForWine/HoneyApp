@page
@model HoneyWebPlatform.Web.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Настрой Имейла";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<hr />
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-9">
        <form id="email-form" method="post">
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group mb-2">
                    <label asp-for="Email" class="form-label">Имейлът Ви</label>
                    <input asp-for="Email" class="form-control" disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }
            else
            {
                <div class="form-floating mb-2">
                    <label asp-for="Email" class="form-label">Имейлът Ви</label>
                    <input asp-for="Email" class="form-control" disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Прати потвърдителен имейл</button>
                </div>
            }
            <div class="form-floating mb-4">
                <label asp-for="Input.NewEmail" class="form-label"></label>
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Смени имейла</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
