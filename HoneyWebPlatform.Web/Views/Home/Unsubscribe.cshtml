@{
    ViewData["Title"] = "Отписване от бюлетин";
}

<div class="container" style="margin-top: 200px; margin-bottom: 200px">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@ViewData["Title"]</h1>

            <p class="text-center">Сигурни ли сте, че искате да се отпишете от нашия бюлетин?</p>

            <form asp-controller="User" asp-action="UnsubscribeNewsletter" method="post">
                <div class="form-group mt-3">
                    <input type="text" class="form-control" name="email" placeholder='Имейл адрес' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Имейл адрес'">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-danger mt-2 mb-4">Отпишете ме</button>
                </div>
            </form>
        </div>
    </div>
</div>