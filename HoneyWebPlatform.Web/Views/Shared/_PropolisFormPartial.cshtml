@model PropolisFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"> Наименование</label>
                <input asp-for="Title" class="form-control" placeholder="Домашен букетов прополис...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"> Описание</label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Как е бил направен..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"> Снимка</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Външен URL линк на снимка...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"> Цена</label>
                <input type="number" asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlavourId"> Вкус</label>
                <select asp-for="FlavourId" class="form-control">
                    @foreach (var flavour in Model.Flavours)
                    {
                            <option value="@flavour.Id">@flavour.Name</option>
                    }
                </select>
                <span asp-validation-for="FlavourId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Запази" />
            </div>
        </form>
    </div>
</div>

