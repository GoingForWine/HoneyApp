@using static HoneyWebPlatform.Common.NotificationMessagesConstants;

@if (TempData.ContainsKey(ErrorMessage))
{
    <script>
        console.log('Error Message:', '@Html.Raw(TempData[ErrorMessage])');
        toastr.error('@Html.Raw(TempData[ErrorMessage])');
    </script>
}

