@model HoneyWebPlatform.Web.ViewModels.Blog.AllPostsQueryModel


<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Пчелния Блог</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_area section_padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">
                    @foreach (var post in Model.Posts)
                    {
                        <partial name="_PostPartial" model="post"/>
                    }
                </div>
            </div>


            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget newsletter_widget">
                        <h4 class="widget_title">Искаш твой пост?</h4>
                        <form asp-controller="Blog" asp-action="Add" method="get">
                            <button class="button rounded-0 primary-bg text-white w-100 btn_4" type="submit"> Създай Пост </button>
                        </form>
                    </aside>
                </div>
            </div>


        </div>
    </div>
</section>
