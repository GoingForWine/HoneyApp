@model HoneyWebPlatform.Web.ViewModels.Blog.PostPreDeleteDetailsViewModel

@{
    ViewBag.Title = "Изтрий Поста";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"> Наименование</label>
                <input asp-for="Title" class="form-control genric-btn disable" disabled="disabled">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content"> Съдържание</label>
                <textarea asp-for="Content" rows="4" class="form-control genric-btn disable" disabled="disabled"></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl">Снимка</label>
                <input asp-for="ImageUrl" class="form-control genric-btn disable" disabled="disabled">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="genric-btn danger radius" type="submit" value="Изтрий" />
            </div>
        </form>
    </div>
</div>